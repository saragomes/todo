<%= form_for @task = Task.new, :remote => true do |f| %>
  <div class="modal-body">
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_field :name, {:placeholder => "Description"} %>
    </div>
    
    <div class="field">
      <%= f.text_field :date, {:placeholder => "Date", 'data-behaviour' =>'datepicker'} %>
    </div>
    
    <div class="field">
      <%= f.text_field :category_id, {:placeholder => "Category"} %>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <button type="submit" class="btn btn-primary"><i class="icon-plus"></i> Add</button>
  </div>
<% end %>
