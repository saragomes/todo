  <!-- Tableau des données -->				
		<table class="table table-striped table-sorting">
			<thead> 
				<tr>
					<th scope="col"><i class="icon-tri-off"></i></th>
					<th scope="col"><%=sortable(:name, "Task")%></button><i class="<%= direction_css(:name)%>"></i></th>
					<th scope="col"><%=sortable(:category, "Category")%><i class="<%= direction_css(:category)%>"></i></th>
					<th scope="col"><%=sortable(:date, "Date")%> (€)<i class="<%= direction_css(:date)%>"></i></th>
					<th scope="col">Action<i class="icon-tri-off"></i></th>
				</tr>
			</thead>
			<tbody>
        <% for task in @tasks %>
				<tr>
					<td></td>
					<td><%=h task.name %></td>
					<td><%=h task.category.name %></td>
					<td><%=h task.date %></td>
					<td></td>
					<td>-</td>
				</tr>
        <%end%>
				</tr>
      </tbody>
  </table>
  <div class="pagination-right">
    <%= render :partial => '/shared/pagination'%>
  </div>


