<!-- Form sign in -->
<%= form_for @user_session = UserSession.new, :url => user_sessions_path do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(@user_session.errors.count, "error") %>:
      <ul>
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="field">
      <%= f.text_field :username, :placeholder =>"Login" %>
    </div>
    <div class="field">
      <%= f.password_field :password, :placeholder => "Password" %>
    </div>
    <button class="btn" type="submit">Go</button>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, "Remember me", :style => 'display: inline-block;' %>
<% end %>
